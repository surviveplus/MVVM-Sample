@model IEnumerable<MvvmSample.Data.ViewModels.ViewProduct>
@{
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

@section ribbon{
<ul>
    <li>@Html.ActionLink("New Item", "NewItem", "Products", null, new { @class = "newItemButton linkButton" })</li>
</ul>
}

<h1>@ViewBag.Title</h1>
<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Publisher</th>
            <th>Price</th>
        </tr>
    </thead>
    <tfoot></tfoot>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="nowrap">@Html.ActionLink(item.Title, "Item", new { id = item.Id })</td>
                <td>@item.Description</td>
                <td class="nowrap">@item.Publisher</td>
                <td class="nowrap">@item.Price</td>
            </tr>
        }
    </tbody>
</table>


