<Page x:Class="MvvmSample.Desktop.Pages.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MvvmSample.Desktop.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="HomePage" 
      Loaded="Page_Loaded"
      d:DataContext="{d:DesignData /SampleData/AboutSampleData.xaml}">

    <Grid Margin="4,4,4,4" >
        <TextBlock Text="Home" Height="40" FontSize="24" VerticalAlignment="Top" />
        <TextBlock Text="{Binding Description}" Margin="0,50,0,40" TextWrapping="Wrap"/>
        <TextBlock Text="{Binding Version}" Height="30" VerticalAlignment="Bottom" />
    </Grid>
</Page>
